#include <stdio.h>
#include <string.h>

#define MAX_STR_LEN 101
#define NUM_NAMES 3

int main() {
    char names[NUM_NAMES][MAX_STR_LEN];
    char input_name[MAX_STR_LEN];
    int i;

    printf("Por favor, digite 3 nomes (até 100 caracteres cada):\n");

    for (i = 0; i < NUM_NAMES; i++) {
        printf("Nome %d: ", i + 1);
        fgets(names[i], MAX_STR_LEN, stdin);
      
        names[i][strcspn(names[i], "\n")] = 0; 
    }

    printf("\nAgora, digite nomes para verificar (o programa irá parar se um nome corresponder a um dos três iniciais):\n");

    while (1) { 
        printf("Digite um nome: ");
        fgets(input_name, MAX_STR_LEN, stdin);
        
        input_name[strcspn(input_name, "\n")] = 0;

        for (i = 0; i < NUM_NAMES; i++) {
            if (strcmp(input_name, names[i]) == 0) {
                printf("Nome '%s' corresponde a um dos nomes iniciais. Encerrando o programa.\n", input_name);
                return 0; // Interrompe o programa
            }
        }
        printf("Nome '%s' não encontrado. Continue digitando.\n", input_name);
    }

    return 0;
}
